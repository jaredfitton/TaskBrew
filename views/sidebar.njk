{% block modals %}
    {% include "modals/course_modal.njk" %}
{% endblock %}

<nav id="sidebar" class="shadow" style="display: flex; flex-direction: column">
    <div class="sidebar-header d-flex justify-content-center">
        <img src="/icons/logo.png" alt="LOGO" style="max-height: 30px">
        <h3 style="margin-bottom: 0">TaskBrew</h3>
    </div>
    <div class="list-group list-group-root" style="border-radius: 0; max-height: 60vh; overflow-y: scroll">
        <a href="/board"
           class="list-group-item list-group-item-action {%if page.key == "board"%}active{% endif %}">Board</a>
        <div class="list-group-item list-group-item-action">
            <div class="row justify-content-between align-items-center">
                <div class="col">
                    Courses
                </div>
                <div class="col" style="text-align: right;">
                    <button data-toggle="modal" data-target="#courseModal" style="border: none; background: none;">
                        <img src="/icons/small_plus.png" alt="PLUS">
                    </button>
                </div>
            </div>
        </div>
        <div class="list-group">
            {% for course in course_links %}
            <a href="/course-detail?course={{ course.id }}"
               class="list-group-item list-group-item-action {% if active_course == course.id %}active{% endif %}">
                {{ course.name }}</a>
            {% endfor %}
        </div>
    </div>
    <div class="list-group" style="margin-top: auto; border-top: black 1px solid; color: black; border-radius: 0">
        <a href="/settings"
           class="list-group-item list-group-item-action {%if page.key == "settings"%}active{% endif %}"
            hidden>
            Settings
        </a>
        <a href="/handlers/logout"
           class="list-group-item list-group-item-action">
            Logout
        </a>
        <a href="#" class="list-group-item list-group-item-action disabled pb-3"></a>
    </div>
</nav>