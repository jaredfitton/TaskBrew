<div class="modal fade" id="courseResourceModal" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Course Resource</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form id="courseResourceForm" class="needs-validation" action="#" method="post" novalidate>
                    <div class="form-group">
                        <label for="resourceTitle">Title</label>
                        <input class="form-control form-control-lg" type="text" placeholder="Ex. Gaucho Space" id="resourceTitle" required>
                    </div>
                    <div class="form-group">
                        <label for="resourceLink">Link</label>
                        <input class="form-control form-control-lg" type="text" placeholder="Ex. www.gauchospace.com" id="resourceLink" required>
                    </div>
                    <input type="hidden" hidden value="/handlers/add-resource" id="crPostLink">
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" id="handleCourseResource" class="btn btn-primary">
                    Create Resource
                </button>
            </div>
        </div>
    </div>
</div>

<script type="module">
    assignScriptToClick('handleCourseResource', createCourseResourceForm);
</script>