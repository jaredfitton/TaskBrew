<div class="modal fade" id="courseModal" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Course</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form id="courseForm" class="needs-validation" action="#" method="post" novalidate>
                    <div class="form-group">
                        <label for="courseTitle">Title</label>
                        <input class="form-control form-control-lg" type="text" placeholder="Ex. Translation of Programming Languages" id="courseTitle" required>
                    </div>
                    <div class="form-group">
                        <label for="courseNum">Number</label>
                        <input class="form-control form-control-lg" type="text" placeholder="Ex. CS 162" id="courseNum" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" id="handleCourse" class="btn btn-primary">
                    Create Course
                </button>
            </div>
        </div>
    </div>
</div>

<script type="module">
    assignScriptToClick('handleCourse', createCourseForm);
</script>